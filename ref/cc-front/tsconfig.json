{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "Styles/*": [
        "./styles/*"
      ],
      "Layouts/*": [
        "./layouts/*"
      ],
      "Pages/*": [
        "./pages/*"
      ],
      "Components/*": [
        "./components/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Services/*": [
        "./services/*"
      ],
      "Utils/*": [
        "./utils/*"
      ],
      "Context/*": [
        "./context/*"
      ],
      "Hooks/*": [
        "./hooks/*"
      ],
      "Assets/*": [
        "./assets/*"
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}